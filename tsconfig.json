
{
  "compilerOptions": {
      "jsx": "react",
      "sourceMap": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "target": "ES5",
      "lib": ["es6", "dom"],
      "esModuleInterop": true
  },
  "include": [
    "./src/**/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}